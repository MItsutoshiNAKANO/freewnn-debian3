(search @LIBDIR/zh_CN/rk_p)

(defmode PIN_YIN  on)
	(defmode quan_pin  on) (defmode two_pin) (defmode two_pin_3key)
(defmode ASCII)
	 (defmode ban_jiao on) (defmode quan_jiao)
(defmode QI_TA)
	(defmode chang_yong_zi on) (defmode guo_biao_ma)
	(defmode qu_wei_ma) (defmode nei_ma)
(defmode GONG_NENG)
	(defmode select on)
	(defmode G_M on) (defmode PJY)

2A_CTRL
(if  GONG_NENG
	(if select	1F_select	2F_select	":")
)
(if  PIN_YIN
   (if quan_pin
        1B_TOUPPER   2P_QuanPin  2P_RongCuo   2Z_tail_pin   "ѻ:P" )
   (if   two_pin
     (if  G_M 1B_TOUPPER  2P_ErPin    2P_RC2   2Z_tail_pin  3P_ErPin  "Ĩѻ:P")
     (if  PJY 1B_TOUPPER  2P_ErPin_P  2P_RC2_P 2Z_tail_pin  3P_ErPin_P "Ĩѻ:P")
    )
   (if   two_pin_3key
     (if G_M 1B_TOUPPER 2P_ErPin_3K  2P_RC2  2Z_tail_pin  3P_ErPin  "ĵѻ:P")
    (if PJY 1B_TOUPPER 2P_ErPin_P_3K 2P_RC2_P 2Z_tail_pin 3P_ErPin_P "ĵѻ:P")
    )
)
(if  ASCII
	(if ban_jiao		"Ƥ:")
	(if quan_jiao		3B_quanjiao    ":")
)
(if  QI_TA
	(if chang_yong_zi	2B_ch_yo_zi      "ڦ:")
	(if guo_biao_ma	1B_TOLOWER   2B_ma_GuoBi  ":")
	(if qu_wei_ma	1B_TOLOWER   2B_ma_QuWei  "ٴ:")
	(if nei_ma	1B_TOLOWER   2B_ma_NeiMa  ":")
)
